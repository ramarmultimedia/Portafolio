<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out;
  }
  .animation-delay-500 {
    animation-delay: 0.5s;
  }
  .animation-delay-2000 {
