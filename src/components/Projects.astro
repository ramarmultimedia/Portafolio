---
import novavita from '../assets/novavita.jpg';
import jardin from '../assets/jardin-botanico.jpg';
import anla from '../assets/anla.jpg';
import labramar from '../assets/labramar.jpg';

const projects = [
  {
    title: "Nova Vita",
    description: "Pagina web para conocer los servicios y actividades para el cuidado integral del adulto mayor.",
    image: novavita,
    tags: ["WordPress","HTML", "CSS", "Fotografía"],
    conocer: "https://www.novavita.com.co"
  },
  {
    title: "Laboratorio de IA",
    description: "Espacio para explorar la atomatizacion de flujos con la ayuda de Inteligencia Artificial.",
    image: labramar,
    tags: ["Wordpress", "n8n", "IA", "Automatización de flujos"],
    conocer: "https://lab.ramarmultimedia.com",
  },
  {
    title: "Jardín Botánico",
    description: "Modelo 3D de tropicario con fotogrametría, visualización interactiva y tecnología de captura inmersiva.",
    image: jardin,
    tags: ["Drone", "Blender", "Modelado 3D"],
    conocer: "https://sketchfab.com/3d-models/tropicario-fotogrametria-andres-ramos-8cd60f1c78674ef2a21ef415839092e9"
  },
  {
    title: "Conoce la ANLA",
    description: "Producción de videos institucionales para conocer la gestión ambiental de la Autoridad Nacional de Licencias Ambientales.",
    image: anla,
    tags: ["Davinci Resolve", "Edición de video", "Grabación de video"],
    conocer: "https://www.youtube.com/watch?v=ArKqxXF0KUw&t=1s"
  },
];
---

<section id="projects" class="py-20 bg-white dark:bg-gray-800">
  <div class="max-w-6xl mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Proyectos
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto rounded-full"></div>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => {
        // Oculta la segunda fila (índices 3 y 4) inicialmente
        const isHidden = index >= 3;
        return (
          <div
            class={`bg-gray-50 dark:bg-gray-900 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2${isHidden ? ' hidden-row' : ''}`}
            style={isHidden ? 'display: none;' : ''}
            data-hidden-row={isHidden ? 'true' : 'false'}
          >
            <div class="relative overflow-hidden">
              <img 
                src={typeof project.image === 'string' ? project.image : project.image.src}
                alt={project.title}
                class="w-full h-48 object-cover hover:scale-110 transition-transform duration-300"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300"></div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{project.title}</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map((tag) => (
                  <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded-md text-xs font-medium">
                    {tag}
                  </span>
                ))}
              </div>
              <div class="flex gap-3">
                <a 
                  href={project.conocer}
                  class="flex items-center gap-2 text-gray-600 dark:text-gray-300 hover:text-blue-500 transition-colors"
                  target="_blank" rel="noopener noreferrer"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  Conocer
                </a>
              </div>
            </div>
          </div>
        );
      })}
    </div>
    <div class="flex justify-center mt-8">
      <button id="descubrir-mas-btn" class="px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold shadow hover:bg-blue-700 transition-colors">
        Descubrir más
      </button>
    </div>
    <script is:inline>
      const btn = document.getElementById('descubrir-mas-btn');
      btn?.addEventListener('click', () => {
        const cards = document.querySelectorAll('[data-hidden-row="true"]');
        cards.forEach(card => {
          card.classList.remove('hidden-row');
          card.style.display = '';
        });
        btn.style.display = 'none';
      });
    </script>
